<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="实拍地震后的美国阿拉斯加 公路受损严重如“末日深坑” "
        android:textSize="18sp"
        android:textColor="#333333"/>

    <ImageView
        android:id="@+id/cover_3"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/title_3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/cover"
        android:scaleType="matrix"/>

    <TextView
        android:id="@+id/source_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cover_3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="路见者"
        android:textSize="12dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/remark_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cover_3"
        android:layout_toRightOf="@+id/source_3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="11评论"
        android:textSize="12dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/time_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cover_3"
        android:layout_toRightOf="@+id/remark_3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="1小时前"
        android:textSize="12dp"
        android:layout_marginBottom="8dp"/>

</RelativeLayout>